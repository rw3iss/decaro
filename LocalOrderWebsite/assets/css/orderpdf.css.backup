html, body {
	height: auto;
}

#page-content {
	position: relative;
	font-family: Arial;
	font-size: 16px;
	padding: 20px;
	max-width: 1160px;
}

#date {
	width: 100%;
	text-align: right;
	height: 30px;
	margin-top: 30px;
}

#date #year {
	margin-left: 120px;
}

#addresses {
	width: 100%;
	height: 60px;
	margin-top: 10px;
	margin-left: 150px;
}

#addresses .address {
	font-size: 14px;
	float: left;
}

#addresses #shipper {
	width: 630px;
}

#addresses #consignee {
	width: 400px;
}

#meta {
	margin-left: 150px;
	margin-top: 0px;
	height: 15px;
}

#items-header {
	margin-top: 20px;
}

#items {
	margin-top: 50px;
	height: 200px;
}

#items > div {
	display: block;
	float: left;
}

#items #pieces {
	text-align: right;
	width: 60px;
}

#items #description {
	display: block;
	width: 540px;
	padding-left: 30px;
}

#items #weight {
	width: 90px;
	text-align: right;
}

#items #charges {
	text-align: right;
	width: 230px;
}

#items #payment_type {
	position: relative;
	width: 195px;
	height: 150px;
	text-align: right;
}

#items #payment_type #collect {
	position: absolute;
	top: 0px;
	right: 0;
}

#items #payment_type #prepaid {
	position: absolute;
	top: 40px;
	right: 0;
}

#items #payment_type #thirdparty {
	position: absolute;
	top: 75px;
	right: 25px;
	font-size: 14px;
	text-align: left;
}
#items #payment_type #thirdparty-x {
	position: absolute;
	top: 120px;
	right: 0;
}

#total {
	display: block;
	width: 300px;
	float: right;
	text-align: right;
	margin-top: 40px;
	margin-left: 30px;
}

#total .wrap {
	margin-right: 20px;
}